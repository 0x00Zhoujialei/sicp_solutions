; 1.11
(define (f n)
  (if (< n 3)
      n
      (+ (f (- n 1))
         (* 2 (f (- n 2)))
         (* 3 (f (- n 3))))))
(define (f-iter n)
  (define (helper a b c index)
    (if (< n 3)
        n
        (if (= index n)
            c
            (helper b
                    c
                    (+ c (* 2 b) (* 3 a))
                    (+ index 1)))))
  (helper 0 1 2 2))
